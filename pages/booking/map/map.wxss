/* pages/map/map.wxss */

.search-all {
  height: 35px;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.search-left {
  flex: 10;
  width: 90%;
  text-align: center;
}

.search-middle {
  flex: 0.6;
  text-align: center;
  margin-left: 5px;
}

.search-right {
  flex: 0.5;
  text-align: center;
  padding-right: 10px;
  padding-top: 3px;
}

.search-left-input {
  margin-top: 3px;
  margin-left: 5px;
  border: 1px solid #e9e9e9;
  border-radius: 3px;
  background-color: #e9e9e9;
  height: 25px;
  width: 100%;
  font-size: 14px;
  color: #9b9b9b;
  line-height: 25px;
}

.search-middle-view {
  margin-left: 50%;
  margin-top: 1%;
  text-align: center;
  width: 0;
  height: 80%;
  border: 1px solid #e9e9e9;
}

.search-right-icon {
  margin-top: 15%;
}
